{% extends 'base.html.twig' %}{#recupere base html head, body#}

{% block title %}Hello !{% endblock %}{#titre#}
{% block stylesheets %}
<style type="text/css">
    form label {
        width: 150px;
    }
</style>
{% endblock %}
{% block connexion %}
<form action="{{ path('connexion') }}" method="post">
    <label for="mail">Mail*</label>
    <input type="mail" id="mail" name="_mail" value="{{ last_mail }}" />

    <label for="mdp">Mot de passe*:</label>
    <input type="password" id="mdp" name="_mdp" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>
{% endblock %}
